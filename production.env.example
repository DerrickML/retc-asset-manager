# Production Environment Variables
# Copy this file to .env.local and update with your production values

# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://appwrite.nrep.ug/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=68926e9b000ac167ec8a
NEXT_PUBLIC_APPWRITE_DATABASE_ID=68926e9b000ac167ec8a
NEXT_PUBLIC_APPWRITE_COLLECTION_ID=68926e9b000ac167ec8a

# Appwrite API Keys (Server-side only)
APPWRITE_API_KEY=your_production_api_key_here

# WebSocket Configuration
NEXT_PUBLIC_WS_HOST=your-production-domain.com

# Email Configuration
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@your-domain.com

# Security
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://your-production-domain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Logging
NODE_ENV=production
LOG_LEVEL=error
